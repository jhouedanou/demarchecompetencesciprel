{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["webpack-env"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/webparts/demarcheCompetence/services/*"],
      "@stores/*": ["src/webparts/demarcheCompetence/stores/*"],
      "@utils/*": ["src/webparts/demarcheCompetence/utils/*"],
      "@types/*": ["src/webparts/demarcheCompetence/types/*"]
    },
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "lib", "dist", "release"]
}
